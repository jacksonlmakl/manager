echo "==============================================="

# Define path to the web application
APP_DIR="$(pwd)/manager-web-app"

# Create the application directory if it doesn't exist
if [ ! -d "$APP_DIR" ]; then
    mkdir -p "$APP_DIR"
    echo "[+] Created application directory: $APP_DIR"
