#!/bin/bash

# Ensure script exits on failure
# set -e

# Start the main containers
echo "ğŸš€ Starting main containers..."
docker compose up -d
echo "âœ… Main containers started"

# Get all running container IDs
container_ids=$(docker ps -q)
echo "ğŸ“¦ Found $(echo "$container_ids" | wc -w) running containers"

# Loop through each container and execute the deploy script
for container_id in $container_ids; do
  container_name=$(docker inspect --format='{{.Name}}' "$container_id" | sed 's/\///')
  echo "=========================="
  echo "ğŸ”§ Processing container: $container_id ($container_name)"
  
  # Create a directory for logs if it doesn't exist
  mkdir -p ./logs

  # Set the log file path for this container
  log_file="./logs/${container_name}.job.log"
  temp_log_file="./logs/${container_name}.temp.log"
  
  echo "ğŸ“‚ Running execution script in container $container_id"
  echo "--- Job Output Begin ---"
  #
  if docker cp "$container_id":/app/controller.yaml ./tmp_controller.yaml; then
    echo "âœ… Successfully copied controller.yaml from $container_id"
  else
    echo "âŒ Failed to copy controller.yaml from $container_id â€” skipping"
    continue
  fi
  
  # Directly get raw schedule value from file â€” no sed, no quote stripping
  schedule=$(yq -r '.schedule // ""' ./tmp_controller.yaml)
  rm -f ./tmp_controller.yaml
  
  echo "**DEBUG: Schedule for $container_name is: '$schedule'"
  
  # Show word count for clarity
  echo "ğŸ” Word count: $(wc -w <<< "$schedule")"
  
  # Cron regex validation (5 fields)
  cron_regex="^(\*|[0-9,-*/]+)[[:space:]]+(\*|[0-9,-*/]+)[[:space:]]+(\*|[0-9,-*/]+)[[:space:]]+(\*|[0-9,-*/]+)[[:space:]]+(\*|[0-9,-*/]+)$"
  if [[ "$schedule" =~ $cron_regex ]]; then
    echo "â­ï¸  Valid schedule found â€” skipping direct run"
    docker exec "$container_id" bash bin/deploy > "logs/${container_name}.deploy.log" 2>&1 &
    continue
  else
    echo "âš ï¸  No valid schedule found â€” running execution manually"






    if sudo docker container exec "$container_id" sudo bash bin/run > "$temp_log_file" 2>&1; then
      # Filter out unimportant logs
      grep -v "Requirement already satisfied\|is already the newest version\|upgraded, 0 newly installed, 0 to remove\|WARNING: apt does not\|InRelease\|Installing\|Collecting" "$temp_log_file" > "$log_file"
      
      # Show the filtered log content
      cat "$log_file"

      echo "--- Job Output End ---"
      echo "âœ… Successfully ran execution script in container $container_id"
      echo "âœ… Filtered logs saved to $log_file"

      # Remove temporary log file
      rm "$temp_log_file"
    else
      # On error, keep the full log content
      mv "$temp_log_file" "$log_file"
      echo "--- Job Output End ---"
      echo "âŒ Failed to run execution script in container $container_id"
      echo "âŒ Check $log_file for details"
    fi
  fi

  echo "=========================="
done

echo "ğŸ‰ All containers processed and execution scripts completed"
